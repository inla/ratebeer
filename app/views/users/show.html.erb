<p id="notice"><%= notice %></p>

<h3>
  <%= @user.username %>
</h3>

<p>
 Has made <%= pluralize(@user.ratings.count, 'rating') %>, average rating <%= @user.average_rating %> <br>
 <%= "Favorite beer is #{@user.favorite_beer}"%><br>
 <%= "Favorite style of beer is #{@user.favorite_style}"%><br>
 <%= "Favorite brewery is #{@user.favorite_brewery}"%>
</p>

<strong>ratings</strong>

<ul>
  <% @user.ratings.each do |rating| %>
    <li>
      <%= rating %>
      <% if @user == current_user %>
          <%= link_to 'delete', rating, method: :delete, data: { confirm: 'Are you sure?' } %>
      <% end %>
    </li>
  <% end %>
</ul>

<% if @user == current_user %>
  <%= link_to 'Edit', edit_user_path(@user) %> |
  <%= link_to 'Destroy', @user, method: :delete, data: { confirm: 'Are you sure?' } %> |
<% end %>
<%= link_to 'Back', users_path %>
