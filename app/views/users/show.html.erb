<h2>
  <%= @user.username %>
  <% if @user.closed  %>
    <span class="badge badge-info">account closed</span>
  <% end %>
</h2>

<% if current_user_is_admin %>
 <%= link_to (@user.closed ? 'open account' : 'close account'), toggle_closed_user_path(@user.id), method: :post, class: "btn btn-danger" %>
<% end %>

<% if @user.ratings.empty? %>
  <p>has not rate any beer</p>
<% else %>
  <p>
    Has made <%= pluralize(@user.ratings.count, 'rating') %>, average rating <%= @user.average_rating %>
  </p> 

  <div class="row">
    <div class="col-4 col-sm-6">
      Favorite beer:
    </div>
    <div class="col-4 col-sm-6">
      <%= @user.favorite_beer.name %>
    </div>
  </div>  
  <div class="row">
    <div class="col-4 col-sm-6">
      Favorite brewery:
    </div>
    <div class="col-4 col-sm-6">
      <%= @user.favorite_brewery.name %>
    </div>
  </div>  
  <div class="row">
    <div class="col-4 col-sm-6">
      Preferred style:
    </div>
    <div class="col-4 col-sm-6">
      <%= @user.favorite_style.name %>
    </div>  
  </div>      
<% end %>

<br>

<p>
  <% if @user.beer_clubs.any? %>
    member of 
    <% @user.beer_clubs.each do |club| %>
      <li> <%= link_to club.name, club %> </li>
    <% end %>
  <% end %>
</p>

<h3>ratings</h3>

<ul>
 <% @user.ratings.each do |rating| %>
   <li> <%= rating %> 
      <% if @user == current_user %>
          <%= link_to 'delete', rating, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %>
      <% end %>   
    </li>  
 <% end %>
</ul>

<% if @user == current_user %>
  <%= link_to 'Edit', edit_user_path(@user) %>
  <br>
  <%= link_to 'Destroy', @user, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %>
 <% end %>